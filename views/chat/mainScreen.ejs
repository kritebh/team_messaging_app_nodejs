<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../../static/css/mainScreen.css">
    <link rel="stylesheet" href="../../static/css/custom-confirm.css">
    <link rel="stylesheet" href="../../static/css/notification.css">
    <link rel="stylesheet" href="../../static/css/chat.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Messaging App</title>
</head>

<body>
    <%- include("navbar.ejs") %>
        <div class="container-fluid overflow">

            <div class="row">
                <div class="col-md-3 black-border" id="left">
                    <h6 class="text-center mt-2">Hey, <span id="username"><%= username %></span></h6>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="fs-5">Channels</span>
                        <i class="bi bi-plus-square" style="font-size:20px;" data-bs-toggle="modal"
                            data-bs-target="#createChannel"></i>
                    </div>
                    <div id="leftpanel">
                    </div>
                </div>
                <div class="col-md-9" id="center">
                    <div id="channeldetails">

                    </div>
                    <hr>
                    <div id="postscontainer">
                        <div class="d-flex justify-content-between" id="postutilitycontainer">
                            <div id="addpostbutton">
                                
                            </div>

                            <div class="d-none" id="searchpostcontainer">
                                <input type="text" name="search" id="searchposts" placeholder="Search Posts" class="form-control" onchange="search(event)">
                            </div>

                        </div>

                        <div id="singlepostcontainer">
                            <img src="../../static/images/peace.png" alt="" srcset=""
                                class="text-center rounded opacity-50 mx-auto d-block">
                        </div>
                    </div>

                </div>
                <div class="col-md-3" id="rightdiv">

                    <div class="mt-3">
                        <input type="text" name="addmember" class="form-control " id="searchmember"
                            placeholder="Add Member" />

                        <div id="searchresult">
                        </div>
                        <h5 class="text-center mt-3">All Members</h5>
                    </div>

                    <div id="right" class="memberscroll">

                    </div>
                </div>

            </div>


        </div>

        <!-- Modal For adding Channels -->
        <div class="modal fade" id="createChannel" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header ">
                        <h5>Add Channel</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" id="modalclose"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="message" class="text-center text-danger"></p>
                        <div>
                            <!-- Channel Name -->
                            <input type="text" class="form-control mb-2" name="channelname" id="channelname"
                                placeholder="Channel Name" required>
                            <!-- Channel Description -->

                            <input type="text" class="form-control mb-2" id="channeldescription"
                                name="channeldescription" placeholder="Description" required>

                            <!-- Tags -->
                            <input type="text" class="form-control mb-2" id="channeltags" name="channeltags"
                                placeholder="Channel Tags" required>
                            <p class="form-text">Tags Should be in , seperated format Ex:- python,django,bootstrap</p>
                            <button type="submit" id="addChannel" class="btn btn-primary">Create Channel</button>
                            <!-- data-bs-dismiss="modal" aria-label="Close" -->
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Modal For adding Channels End -->

        <!-- Modal For Adding Post In Specific Channel -->

        <div class="modal fade" id="addpostmodal" tabindex="-1" aria-labelledby="addpostmodal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" id="postclose" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="postmessage" class="text-center text-success"></p>
                        <div>
                            <input type="text" class="form-control mb-3" name="posttitle" id="posttitle"
                                placeholder="Post Title" required>
                            <button type="submit" id="addPost" class="btn btn-primary">Add Post</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal For Adding Post In Specific Channel End -->

        
        <script src="../../static/js/socket.io.js"></script>
        <script src="../../static/js/moment.js"></script>
        <script src="../../static/js/mainScreen.js"></script>
        <script src="../../static/js/custom-confirm.js"></script>
        <script src="../../static/js/sweetAlert.js"></script>
        <script src="../../static/js/chat.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>


</body>

</html>